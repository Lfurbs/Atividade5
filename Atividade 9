#include <stdio.h>

int main(){
      float salario = 0.0, final = 0.0, servico = 0.0, segfinal = 0.0, tercfinal = 0.0, quartfinal = 0.0, quintfinal = 0.0;

      printf("Informe seu salario");
      scanf("%f", &salario);

      printf("A quantos anos voce esta servindo");
      scanf("%f", &servico);

      if (servico < 1 && salario <= 500)
      {
        final = ((salario * (float)0.25) + salario);
        printf("Com o reajuste, seu salario e: %0.2f", final);
      }else if(servico >= 1 && servico  <= 3 && salario <= 1000)
      {
        final2 = ((salario * (float)0.20) + salario + 100);
        printf("Com o reajuste, seu salario e: %0.2f", secfinal);
      }else if(servico >= 4 && servico  <= 6 && salario <= 1500)
      {
        final3 = ((salario * (float)0.15) + salario + 200);
        printf("Com o reajuste, seu salario e: %0.2f", tercfinal);
      }else if(servico >= 7 && servico  <= 10 && salario <= 2000)
      {
        final4 = ((salario * 0.10) + salario + 300);
        printf("Com o reajuste, seu salario e: %0.2f", quartfinal);
      }else if(servico > 10 && salario > 2000)
      {
        final5 = salario + 500;
        printf("Com o reajuste, seu salario e: %0.2f", quintfinal);
      }else{
      }
      return 0;
}
